<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.wei.flowingflying.testsensor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-feature android:required="true" android:name="android.hardware.sensor.accelerometer"></uses-feature>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.wei.flowingflying.testsensor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SensorListActivity" android:label="传感器列表小例子" />
        <activity android:name=".LightSensorActivity" android:label="光传感器监听小例子" />
        <activity android:name=".ProximitySensorActivity" android:label="近距离传感器小例子" />
        <activity android:name=".GyroscopeSensorActivity" android:label="陀螺仪传感器小例子" />
        <activity android:name=".AccelerometerSensorActivity" android:label="加速测量仪小例子" />
        <activity android:name=".GravityActivity" android:label="重力小例子" />
        <activity android:name=".MagneticFieldSensorActivity" android:label="磁场传感器" />
        <activity android:name=".VirtualJax" android:label="方位测量" />
    </application>
    

</manifest>
